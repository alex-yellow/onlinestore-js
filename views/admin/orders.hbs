<div class="container mt-5">
    {{#if successMessage}}
    <div class="alert alert-success" role="alert" id="mess">
        {{successMessage}}
    </div>
    {{/if}}

    <h2>Order List</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Date</th>
                <th scope="col">Product Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{id}}</td>
                <td>{{date}}</td>
                <td>{{product_name}}</td>
                <td>{{user_name}}</td>
                <td>{{quantity}}</td>
                <td>
                    {{#if status}}
                    deliver
                    {{else}}
                    inCart
                    {{/if}}
                </td>


                <td>
                    <form action="/admin/orders/delete/{{id}}" method="post" class="d-inline"
                        onsubmit="return confirm('Delete order?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>