<div class="container mt-5">
  {{#if successMessage}}
  <div class="alert alert-success" role="alert" id="mess">
    {{successMessage}}
  </div>
  {{/if}}

  <h2>Product List</h2>

  <!-- Добавление ссылки на страницу добавления нового товара -->
  <a href="/admin/products/create" class="btn btn-success mb-3">Add New Product</a>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{price}}</td>
        <td>
          <!-- Ссылка на редактирование, замените YOUR_EDIT_URL на соответствующий маршрут в вашем приложении -->
          <a href="/admin/products/edit/{{id}}" class="btn btn-primary btn-sm">Edit</a>
          <!-- Ссылка на удаление, замените YOUR_DELETE_URL на соответствующий маршрут в вашем приложении -->
            <form action="/admin/products/delete/{{id}}" method="post" class="d-inline" onsubmit="return confirm('Delete product?')">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>