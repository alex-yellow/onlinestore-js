<div class="container mt-5">
    <h2>Admins List</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each admin}}
            <tr>
                <td class="col-md-6">{{name}}</td>
                <td class="col-md-6">
                    <a href="/users/admin/send-message/{{id}}" class="btn btn-success btn-sm">Send Message</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</div>